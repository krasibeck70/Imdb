@model MovieApi.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<style>
    .btn span.glyphicon {
        opacity: 0;
    }

    .btn.active span.glyphicon {
        opacity: 1;
    }

    #form {
        margin-left: 3.8in;
    }

    .form-control {
        margin-top: 0.2in;
    }

    .btn {
        margin-right: 0.1in;
    }

    .jumbotron {
        padding-bottom: 1in;
        margin-top: 0.8in;
        background-image: url('../../Content/images/fondo_login (1).png');
    }
</style>
<main class="col-2 offset-4 text-center">
    <div class="container">

        <div class="jumbotron">
            <div class="row">
                <form method="post" action="@Url.Action("Register","Account")">
                    <div>
                        <h1 style="color: azure">Register</h1>
                    </div>
                    <br />
                    <div id="form">
                        @Html.AntiForgeryToken();
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <input name="Username" class="form-control" type="text" placeholder="Username" />
                        <input name="Email" class="form-control" type="text" placeholder="Email" />
                        <input name="Password" class="form-control" type="password" placeholder="Password" />
                        <input name="ConfirmPassword" class="form-control" type="password" placeholder="Confirm password" />

                    </div>

                    <div>
                        <input type="submit" class=" form-control btn btn-success" value="Register" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</main>
